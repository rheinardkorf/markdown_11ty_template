{
  "editor.minimap.enabled": false,
  "editor.wrappingIndent": "indent",
  "editor.overviewRulerBorder": false,
  "editor.lineHeight": 24,
  "workbench.colorTheme": "Gray Matter Light",
  "[markdown]": {
    "editor.quickSuggestions": true
  },
  "git.enableSmartCommit": true,
  "git.postCommitCommand": "sync",
  "workbench.colorCustomizations": {
    "terminal.foreground": "#acacac",
    "titleBar.activeBackground": "#db662f",
    "titleBar.inactiveBackground": "#db662f"
  },
  "vscodeMarkdownNotes.newNoteTemplate": "---\ntitle: ${noteName}\ndate: ${timestamp}\n---\n\n",
  "vscodeMarkdownNotes.noteCompletionConvention": "noExtension",
  "workbench.editor.enablePreview": false,
  "markdown.extension.preview.autoShowPreviewToSide": false,
  "grammarly.userWords": [
    "Covid",
    "seoDescription",
    "seoTitle",
    "vscode",
    "socialTitle",
    "socialDescription"
  ]
}
